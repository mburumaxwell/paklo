{
  "name": "@paklo/runner",
  "version": "0.10.0",
  "sideEffects": false,
  "type": "module",
  "author": "mburumaxwell",
  "license": "AGPL-3.0-later",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./local": {
      "types": "./dist/local/index.d.mts",
      "import": "./dist/local/index.mjs"
    },
    "./local/azure": {
      "types": "./dist/local/azure/index.d.mts",
      "import": "./dist/local/azure/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "typecheck": "tsc",
    "build": "tsdown",
    "lint": "biome check",
    "test": "vitest",
    "scripts:fetch-images": "tsx src/fetch-images.ts",
    "scripts:cleanup-docker": "tsx src/cleanup-docker.ts",
    "scripts:update-container-manifest": "tsx src/update-containers.ts",
    "clean": "rimraf .turbo dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mburumaxwell/paklo.git",
    "directory": "packages/runner"
  },
  "keywords": [
    "dependabot",
    "azure",
    "devops",
    "paklo"
  ],
  "bugs": {
    "url": "https://github.com/mburumaxwell/paklo/issues"
  },
  "homepage": "https://github.com/mburumaxwell/paklo#readme",
  "dependencies": {
    "@hono/node-server": "1.19.9",
    "@paklo/core": "workspace:*",
    "dockerode": "4.0.9",
    "ky": "1.14.3",
    "node-forge": "1.3.3",
    "tar-stream": "3.1.7",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/dockerode": "4.0.1",
    "@types/node": "25.1.0",
    "@types/node-forge": "1.3.14",
    "@types/tar-stream": "3.1.4",
    "tsdown": "0.20.1",
    "tsx": "4.21.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
